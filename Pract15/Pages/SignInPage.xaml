<Page x:Class="Pract15.Pages.SignInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pract15.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Sign In">

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Label FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center">Введите пин-код</Label>
            
            <StackPanel>
                <TextBox x:Name="SignInTextBox" Style="{DynamicResource SignInTextBox}"/>
                <Button Style="{DynamicResource ButtonSignIn}" Click="Button_Click">Войти</Button>
                <Button Style="{DynamicResource Button}" Click="Button_Click_1">Войти как пользователь</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
